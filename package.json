{
  "name": "plugnmeet-recorder",
  "version": "1.2.1",
  "description": "Simple plugNmeet recorder",
  "author": "Jibon L. Costa",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run build && concurrently -c \"red,green\" --kill-others \"node ./dist/index.js\" \"sleep 1 && node ./dist/websocketServer.js\"",
    "dev": "concurrently -c \"red,green,blue\" --kill-others \"ts-node-dev src/index.ts\" \"sleep 1 && npm run websocket-server && esw -w --ext '.ts','.js' --fix\"",
    "websocket-server": "ts-node-dev src/websocketServer.ts",
    "build": "rm -rf ./dist && tsc -p . --outDir ./dist && cp -rf ./src/chrome-extension ./dist/chrome-extension",
    "proto": "protoc --es_opt=target=ts --plugin=protoc-gen-es=./node_modules/.bin/protoc-gen-es --es_out=./src/proto --proto_path=./protocol/proto_files plugnmeet_recorder.proto"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^0.1.1",
    "axios": "^0.27.2",
    "ioredis": "^5.2.3",
    "js-yaml": "^4.1.0",
    "puppeteer": "^18.0.0",
    "winston": "^3.8.2",
    "ws": "^8.8.1",
    "xvfb": "^0.4.0"
  },
  "devDependencies": {
    "@bufbuild/protoc-gen-es": "0.1.1",
    "@types/ioredis": "4.28.10",
    "@types/js-yaml": "4.0.5",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "concurrently": "7.4.0",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-watch": "8.0.0",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.8.4"
  }
}
